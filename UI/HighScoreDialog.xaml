<Window x:Class="BIMDefender.UI.HighScoreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New High Score!" 
        Width="350" 
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#00ff00"
        BorderThickness="2">

    <Window.Resources>
        <Style x:Key="RetroText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="#00ff00"/>
        </Style>
        
        <Style x:Key="InitialBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Background" Value="#2a2a4e"/>
            <Setter Property="Foreground" Value="#00ff00"/>
            <Setter Property="BorderBrush" Value="#00ff00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#00ff00"/>
            <Setter Property="CharacterCasing" Value="Upper"/>
        </Style>

        <Style x:Key="RetroButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1a1a2e"/>
            <Setter Property="Background" Value="#00ff00"/>
            <Setter Property="BorderBrush" Value="#00aa00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33ff33"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00cc00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="★ NEW HIGH SCORE! ★" 
                       Style="{StaticResource RetroText}" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#ffcc00"
                       HorizontalAlignment="Center"/>

            <!-- Score display -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="Score: " Style="{StaticResource RetroText}" FontSize="20"/>
                <TextBlock x:Name="ScoreDisplay" Text="0" Style="{StaticResource RetroText}" FontSize="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,20">
                <TextBlock Text="Wave: " Style="{StaticResource RetroText}" FontSize="16" Foreground="#888888"/>
                <TextBlock x:Name="WaveDisplay" Text="0" Style="{StaticResource RetroText}" FontSize="16" Foreground="#888888"/>
            </StackPanel>

            <!-- Enter initials prompt -->
            <TextBlock Text="ENTER YOUR INITIALS" 
                       Style="{StaticResource RetroText}" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Initial boxes -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBox x:Name="Initial1" 
                         Style="{StaticResource InitialBox}" 
                         Margin="5,0"
                         TextChanged="Initial_TextChanged"
                         PreviewKeyDown="Initial_PreviewKeyDown"/>
                <TextBox x:Name="Initial2" 
                         Style="{StaticResource InitialBox}" 
                         Margin="5,0"
                         TextChanged="Initial_TextChanged"
                         PreviewKeyDown="Initial_PreviewKeyDown"/>
                <TextBox x:Name="Initial3" 
                         Style="{StaticResource InitialBox}" 
                         Margin="5,0"
                         TextChanged="Initial_TextChanged"
                         PreviewKeyDown="Initial_PreviewKeyDown"/>
            </StackPanel>

            <!-- Submit button -->
            <Button x:Name="SubmitButton" 
                    Content="SUBMIT" 
                    Style="{StaticResource RetroButton}"
                    Click="SubmitButton_Click"
                    IsEnabled="False"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
