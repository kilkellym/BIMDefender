<Window x:Class="BIMDefender.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About BIM Defender" 
        Width="500" 
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#00ff00"
        BorderThickness="2">

    <Window.Resources>
        <Style x:Key="RetroText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="#00ff00"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource RetroText}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#ffcc00"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock" BasedOn="{StaticResource RetroText}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="RetroButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1a1a2e"/>
            <Setter Property="Background" Value="#00ff00"/>
            <Setter Property="BorderBrush" Value="#00aa00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33ff33"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00cc00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="BIM DEFENDER" 
                   Style="{StaticResource RetroText}" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#ff6b6b"
                   HorizontalAlignment="Center"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Style="{StaticResource BodyText}" TextAlignment="Center">
                    Protect the standards from rogue users, haunted families, and exploded imports!
                </TextBlock>

                <!-- Enemies Section -->
                <TextBlock Style="{StaticResource HeaderText}" Text="ENEMIES" Margin="0,15,0,0"/>

                <Grid Margin="0,5,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#e74c3c">👾 Rogue User</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">10 pts — Ignores your standards</TextBlock>
                </Grid>

                <Grid Margin="0,0,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#f1c40f">👻 In-Place Family</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">25 pts — Faster, haunts your model</TextBlock>
                </Grid>

                <Grid Margin="0,0,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#00bcd4">💀 Exploded Import</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">50 pts — Shoots back!</TextBlock>
                </Grid>

                <Grid Margin="0,0,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#9b59b6">🦠 Corrupt File</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">500 pts — Boss every 5 waves</TextBlock>
                </Grid>

                <!-- Power-ups Section -->
                <TextBlock Style="{StaticResource HeaderText}" Text="POWER-UPS" Margin="0,15,0,0"/>

                <Grid Margin="0,5,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#3498db">🔵 Purge All (P)</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">Clears all enemies on screen</TextBlock>
                </Grid>

                <Grid Margin="0,0,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#2ecc71">🟢 Admin Mode (A)</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">Rapid fire for 10 seconds</TextBlock>
                </Grid>

                <Grid Margin="0,0,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource BodyText}" Foreground="#9b59b6">🟣 Backup Save (B)</TextBlock>
                    <TextBlock Grid.Column="1" Style="{StaticResource BodyText}">Absorbs one hit</TextBlock>
                </Grid>

                <!-- Controls Section -->
                <TextBlock Style="{StaticResource HeaderText}" Text="CONTROLS" Margin="0,15,0,0"/>
                <TextBlock Style="{StaticResource BodyText}">← → or A/D — Move left/right</TextBlock>
                <TextBlock Style="{StaticResource BodyText}">SPACE — Shoot</TextBlock>
                <TextBlock Style="{StaticResource BodyText}">P or ESC — Pause</TextBlock>

                <!-- Tips Section -->
                <TextBlock Style="{StaticResource HeaderText}" Text="TIPS" Margin="0,15,0,0"/>
                <TextBlock Style="{StaticResource BodyText}">• Watch out for Exploded Imports — they shoot back!</TextBlock>
                <TextBlock Style="{StaticResource BodyText}">• Save your Purge All power-ups for crowded waves</TextBlock>
                <TextBlock Style="{StaticResource BodyText}">• The Corrupt File boss appears every 5 waves</TextBlock>
                <TextBlock Style="{StaticResource BodyText}">• Grab Backup Save before boss fights</TextBlock>

                <!-- Credits Section -->
                <TextBlock Style="{StaticResource HeaderText}" Text="CREDITS" Margin="0,15,0,0"/>
                <TextBlock Style="{StaticResource BodyText}">Created by ArchSmarter</TextBlock>
                <TextBlock Style="{StaticResource BodyText}" Foreground="#888888">www.archsmarter.com</TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="CLOSE" 
                Style="{StaticResource RetroButton}"
                Click="CloseButton_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
